@page
@model iis.Pages.VeterinaryRecords.IndexModel

@{
    ViewData["Title"] = "VeterinaryRecords";
}

<h1>Veterinary Records</h1>

@if (User.IsInRole("Caregiver"))
{
    <p>
        <a asp-page="Create">Create New request</a>
    </p> 
}

<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.AnimalIDSort">
                    @Html.DisplayNameFor(model => model.VeterinaryRecord[0].AnimalId)
                </a> 
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.DateSort">
                    @Html.DisplayNameFor(model => model.VeterinaryRecord[0].Date)
                </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VeterinaryRecord[0].Details)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.VeterinaryRecord)
        {
        <tr>
            <td>
                    @Html.DisplayFor(modelItem => item.AnimalId)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Details)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
