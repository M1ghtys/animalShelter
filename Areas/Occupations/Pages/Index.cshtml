@page
@model iis.Pages.Occupations.IndexModel

@{
    ViewData["Title"] = "Occupations";
}


<h1>Users registered in the system</h1>

<h2 class=mt-4>
    Admin-level users
</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Occupation[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Occupation[0].Permissions)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Occupation[0].Pay)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Occupation)
        {
            @if (item.Permissions == 1)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        Admin
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Pay)
                    </td>
                    <td align=right>
                        <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

