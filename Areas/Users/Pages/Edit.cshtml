@page "{id:Guid}"
@using iis.Data
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using System.Security.Claims
@model iis.Pages.Users.EditModel

@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <h1>Edit</h1>

    <h4>User</h4>
    <hr />
    <div class="card card-body">
        <form method="post">
            <div>
                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            <label asp-for="UserModel.Name" class="control-label"></label>
                            <input asp-for="UserModel.Name" class="form-control" />
                            <span asp-validation-for="UserModel.Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="UserModel.UserName" class="control-label">User Name</label>
                            @if (@Model.DuplicateUserName)
                            {
                                <span style="color:red">Username already taken!</span>
                            }
                            <input asp-for="UserModel.UserName" class="form-control" />
                            <span asp-validation-for="UserModel.UserName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <label asp-for="UserModel.Address" class="control-label"></label>
                            <input asp-for="UserModel.Address" class="form-control" />
                            <span asp-validation-for="UserModel.Address" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="UserModel.Email" class="control-label"></label>
                            <input asp-for="UserModel.Email" class="form-control" />
                            <span asp-validation-for="UserModel.Email" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="UserModel.Id" />


                <div class="form-group">
                    <label asp-for="UserModel.PhoneNumber" class="control-label">Phone Number</label>
                    <input asp-for="UserModel.PhoneNumber" style="width:16%;" class="form-control" />
                    <span asp-validation-for="UserModel.PhoneNumber" class="text-danger"></span>
                </div>
                @if (@Model.UserModel.Id != @HttpContext.User.FindFirstValue(ClaimTypes.NameIdentifier))
                {
                    <div class="form-group">
                        <label asp-for="Role" class="control-label"></label>
                        <select asp-for="Role" asp-items="Html.GetEnumSelectList<Role>()" style="width:16%;" class="form-control"></select>
                        <span asp-validation-for="Role" class="text-danger"></span>
                    </div>
                }
            </div>
            <div class="form-group" style="margin-top:3%;">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div>
        <a asp-page="./Index">Back to List</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
